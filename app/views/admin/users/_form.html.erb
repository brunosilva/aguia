<%= form_with(model: [:admin, admin_user]) do |form| %>
  <% if admin_user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_user.errors.count, "error") %> prohibited this admin_user from being saved:</h2>

      <ul>
        <% admin_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, autocomplete: "username", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
